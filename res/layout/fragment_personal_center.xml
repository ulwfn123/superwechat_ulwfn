<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/personal_center_top_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_personal_XiaoXi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/iconfont_xinxi"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/iv_personal_Shezhi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_personal_XiaoXi"
            android:background="@null"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="设置"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_user_Xingxi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/personal_center_top_bg"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="15dp"
            android:src="@drawable/nopic"/>
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="传说          "
            android:textSize="30dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/tb_icon_home_qrcode_normal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f60"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llv_baobei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_baobei_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="180"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="收藏的宝贝"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llv_diaopu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/llv_baobei"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="180"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="收藏的店铺"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llv_ZuJi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/llv_diaopu"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="180"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="浏览记录"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rltv_dingdan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="我的订单 "
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/rviv_dingdan1"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:src="@drawable/tu1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/rviv_dingdan1"
            android:gravity="center_vertical"
            android:text="查询全部已购宝贝"
            android:textColor="#f00" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/center_user_order_lis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llv_sub1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_ll_order_list1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/order_list1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="sub 1"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llv_sub2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/llv_sub1"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_ll_order_list2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/order_list2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="sub 1"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llv_sub3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/llv_sub2"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
            android:id="@+id/iv_ll_order_list3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/order_list3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="sub 1"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llv_sub4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/llv_sub3"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_ll_order_list4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/order_list4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="sub 1"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llv_sub5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/llv_sub4"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_ll_order_list5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/order_list5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="sub 1"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rltv_Kajuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="我的卡卷 "
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/rltv_Kajuan1"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:src="@drawable/tu1"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rltv_ShenHuo_TuPian"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/center_card_coupon1"/>
            <TextView
                android:id="@+id/rltv_ShenHUo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/rltv_ShenHuo_TuPian"
                android:gravity="center_vertical"
                android:text="生活卷 "
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/rltv_ShenHUo1"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:src="@drawable/tu1"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rltv_WangDian_TuPian"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/center_card_coupon2"/>
            <TextView
                android:id="@+id/rltv_WangDian"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/rltv_WangDian_TuPian"
                android:gravity="center_vertical"
                android:text="网店卷 "
                android:textColor="@color/black"
                android:textSize="20dp"/>
            <ImageView
                android:id="@+id/rltv_WangDian1"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:src="@drawable/tu1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/rltv_WangDian1"
                android:gravity="center_vertical"
                android:text="暂无可以优惠券"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rltv_HuiYuan_TuPian"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/center_card_coupon3"/>
            <TextView
                android:id="@+id/rltv_HuiYuan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/rltv_HuiYuan_TuPian"
                android:gravity="center_vertical"
                android:text="会员卡 "
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/rltv_HuiYuan1"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:src="@drawable/tu1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/rltv_HuiYuan1"
                android:gravity="center_vertical"
                android:text="一卡在手逛店无忧"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="我的专享特权"
                android:textColor="@color/black"
                android:textSize="25dp"/>

            <ImageView
                android:id="@+id/rltv_TeQuan1"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:src="@drawable/tu1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/rltv_TeQuan1"
                android:gravity="center_vertical"
                android:text="领金币，看优惠"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>