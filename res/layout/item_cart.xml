<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_cart"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white">
    <CheckBox
        android:id="@+id/cb_cart_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:checked="true"
        />
    <ImageView
        android:id="@+id/iv_cart_good_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/cb_cart_selected"
        android:src="@drawable/default_avatar"/>
    <TextView
        android:id="@+id/tv_cart_good_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_cart_good_avatar"
        android:lines="1"
        android:paddingRight="60dp"
        android:text="商品名称商品名称商品名称"
        android:textSize="15dp"/>
    <ImageView
        android:id="@+id/iv_cart_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cart_good_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_cart_good_avatar"
        android:padding="3dp"
        android:src="@drawable/add_cart"/>
    <TextView
        android:id="@+id/tv_cart_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cart_good_name"
        android:layout_marginTop="5dp"
       android:layout_toRightOf="@id/iv_cart_add"
        android:text="(4)"
        />
    <ImageView
        android:id="@+id/iv_cart_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cart_good_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tv_cart_text"
        android:padding="3dp"
        android:src="@drawable/del_cart"/>
    <TextView
        android:id="@+id/tv_car_jiage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_cart_good_name"
        android:text="$9999.99"
        android:textColor="#f00"/>
</RelativeLayout>