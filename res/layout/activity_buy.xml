<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ebpay_text_hint">

    <RelativeLayout
        android:id="@+id/rl_order_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_order_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="联系人："
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_order_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_order_Name"
            android:layout_toRightOf="@id/tv_order_Name" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_order_Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_order_name"
        android:layout_marginTop="5sp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_order_Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="电话号码："
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_order_Phonee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_order_Phone"
            android:layout_toRightOf="@id/tv_order_Phone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_order_Proviince"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_order_Phone"
        android:layout_marginTop="5sp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_order_Proviince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="联系人"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_order_Proviince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_order_Proviince"
            android:layout_toRightOf="@id/tv_order_Proviince" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_order_Provnce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_order_Phone"
        android:layout_marginTop="5sp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_order_Provnce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="联系地址："
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_order_Provnce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_order_Provnce"
            android:layout_toRightOf="@id/tv_order_Provnce" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_order_Street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_order_Provnce"
        android:layout_marginTop="5sp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_order_Street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="联系人"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_order_Street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_order_Street"
            android:layout_toRightOf="@id/tv_order_Street" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_buy"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_style_alert_dialog_special"
        android:text="结算"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</RelativeLayout>